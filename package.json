{
  "name": "react-libraries",
  "description": "React tools monorepos",
  "private": true,
  "scripts": {
    "clean": "lerna clean",
    "reset": "lerna clean && rm -rf packages/**/package-lock.json && rm -rf packages/**/**/package-lock.json && lerna bootstrap",
    "scaffold": "node ./config/tasks/scaffold.js",
    "publish:all": "lerna bootstrap && lerna run test && lerna run compile && lerna publish",
    "prettier": "prettier --write ' .{js,jsx,ts,tsx,css,json,md}'",
    "storybook": "cd storybook && npm run storybook",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@babel/core": "^7.16.7",
    "@babel/preset-env": "^7.16.7",
    "@babel/preset-react": "^7.16.7",
    "@babel/preset-typescript": "^7.16.7",
    "@testing-library/react": "^12.1.2",
    "@testing-library/react-hooks": "^7.0.2",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.4.0",
    "@types/react": "^17.0.38",
    "@zouloux/files": "^0.6.0",
    "app-root-path": "^3.0.0",
    "babel-jest": "^27.4.6",
    "change-case": "^4.1.2",
    "colors": "^1.4.0",
    "html-element-stringify": "^0.2.0",
    "husky": "^7.0.4",
    "inquirer": "^8.2.0",
    "jest": "^27.4.7",
    "lerna": "^4.0.0",
    "lint-staged": "^12.1.7",
    "microbundle": "^0.14.2",
    "prettier": "^2.5.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-test-renderer": "^17.0.2",
    "ts-jest": "^27.1.2",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*/**/**/**/*.{js,jsx,ts,tsx,css,json,md}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@wbe/debug": "^1.0.0"
  }
}
