{
  "name": "libraries",
  "description": "Mono-repos libraries for front-end applications.",
  "private": true,
  "scripts": {
    "clean": "lerna clean",
    "reset": "lerna clean && rm -rf packages/**/package-lock.json && rm -rf packages/**/**/package-lock.json && lerna bootstrap",
    "scaffold": "node ./config/tasks/scaffold.js",
    "publish:all": "lerna bootstrap && lerna run test && lerna run compile && lerna publish",
    "prettier": "prettier --write ' .{js,jsx,ts,tsx,css,json,md}'",
    "storybook": "cd storybook && npm run storybook",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@babel/core": "^7.15.0",
    "@babel/preset-env": "^7.15.0",
    "@babel/preset-react": "^7.14.5",
    "@babel/preset-typescript": "^7.15.0",
    "@testing-library/react": "^12.0.0",
    "@testing-library/react-hooks": "^7.0.1",
    "@testing-library/user-event": "^13.2.1",
    "@types/jest": "^27.0.1",
    "@types/react": "^17.0.19",
    "@zouloux/files": "^0.6.0",
    "app-root-path": "^3.0.0",
    "babel-jest": "^27.0.6",
    "change-case": "^4.1.2",
    "colors": "^1.4.0",
    "debug": "^4.3.2",
    "html-element-stringify": "^0.2.0",
    "husky": "^7.0.2",
    "inquirer": "^8.1.2",
    "jest": "^27.0.6",
    "lerna": "^4.0.0",
    "lint-staged": "^11.1.2",
    "microbundle": "^0.13.3",
    "prettier": "^2.3.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-test-renderer": "^17.0.2",
    "ts-jest": "^27.0.5",
    "ts-node": "^10.2.1",
    "typescript": "^4.3.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*/**/**/**/*.{js,jsx,ts,tsx,css,json,md}": [
      "prettier --write"
    ]
  }
}
